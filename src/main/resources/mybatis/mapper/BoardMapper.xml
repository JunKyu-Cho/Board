<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.basic.mapper.BoardMapper">
    <select id="getList" resultType="Board">
        SELECT * FROM BOARD;
    </select>

    <select id="select" parameterType="long" resultType="Board">
        SELECT * FROM BOARD WHERE ID = #{id};
    </select>

    <insert id="insert" parameterType="Board">
        INSERT INTO BOARD(TITLE, CONTENT, WRITER, REGDATE) VALUES (#{title}, #{content}, #{writer}, #{regDate});
    </insert>

    <update id="update" parameterType="Board">
        UPDATE BOARD SET CONTENT = #{content} WHERE ID = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM BOARD WHERE id = #{id};
    </delete>

</mapper>